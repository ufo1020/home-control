doctype
html(ng-app='HomeControl')
head
  meta(charset='UTF-8')
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  title Home Cental
  script.
    Polymer = {lazyRegister: true,
    useNativeCSSProperties: true};
  script(src='components/webcomponentsjs/webcomponents-lite.js')
  script(src='components/angular/angular.js')
  script(src="components/socket.io-client/dist/socket.io.js")
  script(src='js/controllers/home-server.js')
  link(rel="import" href="components/iron-image/iron-image.html")
  link(rel="import" href="components/paper-slider/paper-slider.html")
  link(rel="import" href="components/iron-icons/iron-icons.html")
  link(rel="import" href="components/paper-fab/paper-fab.html")
  link(rel="import" href="components/paper-button/paper-button.html")
  link(rel="import" href="components/paper-time-input/paper-time-input.html")
  link(rel="import" href="components/iron-pages/iron-pages.html")
  link(rel='stylesheet', href='css/core.css')
  link(rel="stylesheet" type="text/css" href="components/nvd3/build/nv.d3.css")
  script(src="components/d3/d3.js")
  script(src="components/nvd3/build/nv.d3.js")
  script(src='components/angular-nvd3/dist/angular-nvd3.js')
body(ng-controller='mainController as ctrl')
  section.section
      iron-pages(selected="0" id="pages-ontap")
        div.image-background(name='main-page')
          div.blur-background
          div.center-container
              div.text-container
                span.text {{ctrl.current_temp}}
        div.image-background(name='power-page')
          div.blur-background-time
          div.center-container-time
              paper-slider.time-slider(id='target' class ="red" min="8" max="30" value="18" pin editable)
              paper-time-input.time-input(id='time_input' format="24")
              paper-button.time-button(raised ng-click='ctrl.add_timer()') Add timer
              paper-button.main-button-button(raised ng-click='ctrl.turn_on()' class ="red") Heater ON 
              span {{ctrl.timers}}
        div.image-background(name='plot-page')
          div.blur-background-plot
          div.center-container-plot
            nvd3(options='ctrl.nvd3_options' data='ctrl.report_data', api='ctrl.nvd3_api')

      div.bottom-menu
        div.bottom-menu-container
          div.botton
            paper-fab.blue(id= "home_page" icon="icons:home" title="home" ng-click="ctrl.on_home_click()")
          div.botton
            paper-fab.blue(id= "power_page" icon="icons:settings" title="power" ng-click="ctrl.on_power_click()" disabled)
          div.botton
            paper-fab.blue(id= "plot_page" icon="icons:trending-up" title="chart" ng-click="ctrl.on_chart_click()")

